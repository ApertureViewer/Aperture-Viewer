<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater
 height="80"
 help_topic="floater_save_preset"
 layout="topleft"
 name="save_pref_preset"
 save_rect="true"
 title="Save Graphic Preset"
 width="288">

    <panel
     name="P_Save_Preset_Header"
     follows="top|left"
     layout="topleft"
     top_pad="3"
     left="0"
     width="288"
     height="22"
     bg_alpha_color="Phototools_Header"
     border_visible="false"
     border_thickness="1"
     background_visible="true">

        <text
         name="T_Tone_Settings"
         follows="left|top"
         layout="topleft"
         left="7"
         font="SansSerif"
         height="13"
         width="275">
            Enter or Select a Present Name
        </text>

    </panel>

    <panel
     name="P_Save_Preset_Settings"
     follows="top|left"
     layout="topleft"
     top_pad="0"
     left="0"
     width="286"
     height="57" 
     border_visible="false"
     bevel_style="none"
     background_visible="true">

        <combo_box
         follows="top|left"
         layout="topleft"
         left="5"
         name="preset_combo"
         top_pad="5"
         allow_text_entry="true"
         height="22"
         right="-5"/>

        <button
         follows="top|left"
         height="22"
         label="Save"
         layout="topleft"
         top_pad="3"
         left="5"
         name="save"
         width="100"/>

        <button
         follows="bottom|right"
         height="22"
         label="Cancel"
         layout="topleft"
         left_pad="0"
         name="cancel"
         width="100"/>

    </panel>

</floater>
